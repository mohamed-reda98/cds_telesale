<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_print_badge" model="ir.actions.report">
        <field name="name">Sale Order Lines</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">cds_telesale.report_orderline</field>
        <field name="report_file">cds_telesale.report_orderline</field>
        <field name="print_report_name">'Print Badge - %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_orderline">
        <t t-call="report.html_container">
            <t t-call="report.internal_layout">
                <!-- <t t-call="report.external_layout"> -->
                <div class="page">
                    <h2>TITLE FOR YOUR REPORT</h2>
                    <!--
                    Build your report here!
                    Do it in awesome way ;)
                    -->
                </div>
            </t>
        </t>
    </template>
</odoo>